{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: start (movie-search-app)",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/movie-search-app"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^(.+)$",
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting the development server",
                    "endsPattern": "Compiled successfully"
                }
            }
        }
    ]
}
